# required environment variables

# Android SDK
export ANDROID_HOME=${HOME}/sdk/

# Java JDK for gradlew
export JAVA_HOME="/usr/lib/jvm/java-8-oracle/jre"

# add Android SDK platform tools to path
if [ -d "$HOME/.android/platform-tools" ]; then
    PATH="$HOME/.android/platform-tools:$PATH"
fi

# add golang to path
if [ -d "/usr/local/go/bin" ]; then
    PATH="/usr/local/go/bin:$PATH"
fi

# powerup android builds
export USE_CCACHE=1
export CCACHE_DIR=/home/chinmay/.android/.ccache

export ANDROID_JACK_VM_ARGS="-Dfile.encoding=UTF-8 -XX:+TieredCompilation -Xmx4096M"
export JACK_SERVER_VM_ARGUMENTS="-Dfile.encoding=UTF-8 -XX:+TieredCompilation -Xmx4096M"
